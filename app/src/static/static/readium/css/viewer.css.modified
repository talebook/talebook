/* toolbar */
.navbar .btn-group > .btn{
  border: none;
  border-radius: 0px;
  user-select:none;
  -webkit-user-select: none;
}

.navbar .btn-group > .btn:hover, .navbar .btn-group > .btn:active, .navbar .btn-group > .btn:focus{
  box-shadow: none;
}

.navbar .btn {
  color : #ddd;
  font-size: 16px;
  width: 48px;
  height: 36px;
  background: no-repeat center center;
    background-color: #4d4d4d;
}

.navbar
{
  background: #4d4d4d;
  box-shadow: 0px 1px 5px #333;
  border-radius: 0px;
  min-height: 36px;
  margin-bottom: 0px;
}

.navbar-right
{
    min-height: 36px;
    background-color: #4d4d4d;
}

.book-title-header{
    /*
